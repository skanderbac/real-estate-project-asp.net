
@{
    ViewBag.Title = "Edit";
}


<div class="container">
    <div class="row">

        <form action="@Url.Action("Edit", "Achat")" method="post" enctype="multipart/form-data">
            <div class="col-lg-12 col-md-12">
                <input type="hidden" name="id" value="@ViewBag.result.id">
                <div class="submit-page">

                    <!-- Basic Information -->
                    <div class="form-submit" data-select2-id="20">
                        <h3>Basic Information</h3>
                        <div class="submit-section" data-select2-id="19">
                            <div class="row">
                                <div class="form-group col-md-12">
                                    <label>Property Title<span class="tip-topdata" data-tip="Property Title"><i class="ti-help"></i></span></label>
                                    <input class="form-control" name="titre" type="text" value="@ViewBag.result.titre" required>
                                </div>

                                <div class="form-group col-md-6">
                                    <label>Status</label>
                                    <select id="status" name="status" class="form-control">
                                        <option value="@ViewBag.result.status"  selected>@ViewBag.result.status</option>
                                        <option value="For Rent" data-select2-id="9">For Rent</option>
                                        <option value="For Sale" data-select2-id="10">For Sale</option>
                                    </select>
                                </div>

                                <div class="form-group col-md-6">
                                    <label>Property Type</label>
                                    <select id="ptypes" class="form-control" name="type">
                                        <option value="@ViewBag.result.type" selected>@ViewBag.result.type</option>
                                        <option value="House" data-select2-id="36">House</option>
                                        <option value="Apartment" data-select2-id="37">Apartment</option>
                                        <option value="Villa" data-select2-id="38">Villa</option>
                                    </select>
                                </div>

                                <div class="form-group col-md-6">
                                    <label>Price</label>
                                    <input type="text" value="@ViewBag.result.price" class="form-control" placeholder="USD" name="price" required>
                                </div>

                                <div class="form-group col-md-6">
                                    <label>Area</label>
                                    <input type="text" value="@ViewBag.result.areas" class="form-control" name="areas">
                                </div>

                                <div class="form-group col-md-6">
                                    <label>Bedrooms</label>
                                    <select id="bedrooms" class="form-control" name="bedrooms" required>
                                        <option value="@ViewBag.result.bedrooms" selected>@ViewBag.result.bedrooms</option>
                                        <option value="1" data-select2-id="28">1</option>
                                        <option value="2" data-select2-id="29">2</option>
                                        <option value="3" data-select2-id="30">3</option>
                                        <option value="4" data-select2-id="31">4</option>
                                        <option value="5" data-select2-id="32">5</option>
                                    </select>
                                </div>

                                <div class="form-group col-md-6">
                                    <label>Bathrooms</label>
                                    <select id="bathrooms" class="form-control" name="bathrooms" required>
                                        <option value="1" data-select2-id="22">1</option>
                                        <option value="2" data-select2-id="23">2</option>
                                        <option value="3" data-select2-id="24">3</option>
                                        <option value="4" data-select2-id="25">4</option>
                                        <option value="5" data-select2-id="26">5</option>
                                    </select>
                                </div>

                            </div>
                        </div>
                    </div>

                    <!-- Gallery -->
                    <div class="form-submit">
                        <h3>Gallery</h3>
                        <div class="submit-section">
                            <div class="row">

                                <div class="form-group col-md-12">
                                    <label>Upload Gallery</label>
                                    <input type="file" name="photo">
                                    <input  type="hidden" name="photo1" value="@ViewBag.result.photo">
                                </div>

                            </div>
                        </div>
                    </div>

                    <!-- Location -->
                    <div class="form-submit">
                        <h3>Location</h3>
                        <div class="submit-section">
                            <div class="row">

                                <div class="form-group col-md-6">
                                    <label>Address</label>
                                    <input type="text" value="@ViewBag.result.address" class="form-control" name="address" required>
                                </div>

                                <div class="form-group col-md-6">
                                    <label>City</label>
                                    <select name="city" class="form-control" required>
                                        <option value="@ViewBag.result.city" selected>@ViewBag.result.city</option>
                                        <option value="Tunis">Tunis</option>
                                        <option value="Nabeul">Nabeul</option>
                                        <option value="Sousse">Sousse</option>
                                    </select>
                                </div>

                            </div>
                        </div>
                    </div>

                    <!-- Detailed Information -->
                    <div class="form-submit" data-select2-id="45">
                        <h3>Detailed Information</h3>
                        <div class="submit-section" data-select2-id="44">
                            <div class="row">

                                <div class="form-group col-md-12">
                                    <label>Description</label>
                                    <textarea class="form-control h-120" name="description" required>@ViewBag.result.description</textarea>
                                </div>

                                <div class="form-group col-md-6">
                                    <label>Building Age (optional)</label>
                                    <select id="bage" class="form-control" name="age">
                                        <option value="@ViewBag.result.age" data-select2-id="58">@ViewBag.result.age</option>
                                        <option value="0-5Years" data-select2-id="58">0 - 5 Years</option>
                                        <option value="5-10Years" data-select2-id="59">0 - 10Years</option>
                                        <option value="10-15Years" data-select2-id="60">0 - 15 Years</option>
                                        <option value="15-20Years" data-select2-id="61">0 - 20 Years</option>
                                        <option value="20+Years" data-select2-id="62">20+ Years</option>
                                    </select>
                                </div>

                                <div class="form-group col-md-6">
                                    <label>Garage (optional)</label>
                                    <select id="garage" class="form-control" name="garage">
                                        <option value="@ViewBag.result.garage" selected>@ViewBag.result.garage</option>
                                        <option value="0" data-select2-id="52">0</option>
                                        <option value="1" data-select2-id="52">1</option>
                                        <option value="2" data-select2-id="53">2</option>
                                        <option value="3" data-select2-id="54">3</option>
                                        <option value="4" data-select2-id="55">4</option>
                                        <option value="5" data-select2-id="56">5</option>
                                    </select>
                                </div>

                                <div class="form-group col-md-12">
                                    <label>Other Features (optional)</label>
                                    <div class="o-features">
                                        <ul class="no-ul-list third-row">
                                            <li>
                                                @if (ViewBag.result.ac == true)
                                                {
                                                    <input id="a-1" class="checkbox-custom" name="ac" type="checkbox" checked>
                                                }
                                                else
                                                {
                                                    <input id="a-1" class="checkbox-custom" name="ac" type="checkbox">
                                                }
                                                <label for="a-1" class="checkbox-custom-label">Air Condition</label>
                                            </li>
                                            <li>
                                                @if (ViewBag.result.internet)
                                                {
                                                    <input id="a-2" class="checkbox-custom" name="internet" type="checkbox" checked>
                                                }
                                                else
                                                {
                                                    <input id="a-2" class="checkbox-custom" name="internet" type="checkbox">
                                                }
                                                <label for="a-2" class="checkbox-custom-label">Internet</label>
                                            </li>
                                            <li>
                                                @if (ViewBag.result.elevator == true)
                                                {
                                                    <input id="a-3" class="checkbox-custom" name="elevator" type="checkbox" checked>
                                                }
                                                else
                                                {
                                                    <input id="a-3" class="checkbox-custom" name="elevator" type="checkbox">
                                                }
                                                <label for="a-3" class="checkbox-custom-label">Elevator</label>
                                            </li>
                                            <li>
                                                @if (ViewBag.result.parking == true)
                                                {
                                                    <input id="a-4" class="checkbox-custom" name="parking" type="checkbox" checked>
                                                }
                                                else
                                                {
                                                    <input id="a-4" class="checkbox-custom" name="parking" type="checkbox">
                                                }
                                                <label for="a-4" class="checkbox-custom-label">Parking</label>
                                            </li>
                                            <li>
                                                @if (ViewBag.result.pool == true)
                                                {
                                                    <input id="a-5" class="checkbox-custom" name="pool" type="checkbox" checked>
                                                }
                                                else
                                                {
                                                    <input id="a-5" class="checkbox-custom" name="pool" type="checkbox">
                                                }
                                                <label for="a-5" class="checkbox-custom-label">Pool</label>
                                            </li>
                                        </ul>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>

                    <div class="form-submit">
                        <h3>Contact Information</h3>
                        <div class="submit-section">
                            <div class="row">

                                <div class="form-group col-md-4">
                                    <label>Name</label>
                                    <input type="text" class="form-control" name="name" value="@ViewBag.result.name" required>
                                </div>

                                <div class="form-group col-md-4">
                                    <label>Email</label>
                                    <input type="text" class="form-control" name="email" value="@ViewBag.result.email" required>
                                </div>

                                <div class="form-group col-md-4">
                                    <label>Phone (optional)</label>
                                    <input type="text" class="form-control" value="@ViewBag.result.phone" name="phone">
                                </div>

                            </div>
                        </div>
                    </div>
                    <div class="form-group col-lg-12 col-md-12">
                        <button class="btn btn-theme-light-2 rounded" type="submit">Edit</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

